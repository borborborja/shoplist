# =============================================================================
# ShopList Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# These are used by docker-compose.yml.

# -----------------------------------------------------------------------------
# DATA PERSISTENCE
# -----------------------------------------------------------------------------
# Directory where PocketBase stores its SQLite database.
# Default: /pb_data (inside container)
DATA_DIR=/pb_data

# -----------------------------------------------------------------------------
# SMTP CONFIGURATION (Optional - for email verification)
# -----------------------------------------------------------------------------
# Set SMTP_ENABLED=true to enable email sending for:
# - Email verification for new users
# - Password reset emails

SMTP_ENABLED=false

# Your SMTP server hostname (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=

# SMTP port (usually 587 for TLS/STARTTLS, 465 for SSL)
SMTP_PORT=587

# SMTP authentication username (usually your email address)
SMTP_USER=

# SMTP authentication password or app-specific password
SMTP_PASSWORD=

# Name shown in the "From" field of emails
SMTP_SENDER_NAME=ShopList

# Email address shown in the "From" field
SMTP_SENDER_ADDRESS=noreply@example.com

# -----------------------------------------------------------------------------
# BRING! CONNECTOR CONFIGURATION
# -----------------------------------------------------------------------------
# Credentials for Bring! Shopping List (https://getbring.com/)
BRING_EMAIL=
BRING_PASSWORD=
# Optional: UUID of the specific Bring list to sync. If empty, the connector will list available lists.
BRING_LIST_UUID=

# Admin credentials for the connector to access PocketBase
PB_ADMIN_EMAIL=
PB_ADMIN_PASSWORD=
